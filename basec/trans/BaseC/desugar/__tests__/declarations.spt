]] run strip-annos to Program(_, [
    FuncDeclaration(
      [],
      Type([], Pointer(Int32())),
      _,
      Decl(Identifier("a")),
      [
        FunDefinitionParameter(Type([], Int32())),
        FunDefinitionParameter(Type([], Pointer(Int32()))),
        FunDefinitionParameter(Type([], Pointer(Pointer(Int32))), _, _),
        FunDefinitionParameter(Type([], Array(Int32)), _, _)
      ]
    )
  ])

