module declarations

language MetaC

test desugar var declaration [[
  static unsigned int x, y = 2;
  float a;
  double b;
]] run strip-annos to Program(_, [
    VarDeclaration(
      [Static()],
      Type([], UInt32()),
      Declarator(None(), _),
      Decl(Identifier("x")),
      None()
    ),
    VarDeclaration(
      [Static()],
      Type([], UInt32()),
      Declarator(_, _),
      Decl(Identifier("y")),
      Some(Integer("2"))
    ),
    VarDeclaration(_, Type([], Float32()), _, _, _),
    VarDeclaration(_, Type([], Float64()), _, _, _)
  ])

