module fundef

language metac

start symbol Program

test minimal function definition [[
  x() {}
]] run get-fundef-from-program to FunDef(
  [],
  FunDeclarator(
    None,
    IdentifierName(Identifier("x")),
    None
  ),
  [],
  CompoundStatement([])
)

test parenthesized function name [[
  (x)() {}
]] run get-fundef-from-program to FunDef(
  [],
  FunDeclarator(
    None,
    ParenName(Identifier("x")),
    None
  ),
  [],
